<html>
    <head>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.js"></script>
        <style>
            canvas{
                width: 100%
            }
        </style>
    </head>
    <body style="background-color:gainsboro;">
        <center>
            <canvas id="acclCanvas" height="400"></canvas>
            <hr>
            <canvas id="gyroCanvas" height="400"></canvas>
            <hr>
            <canvas id="tempCanvas" height="400"></canvas>
        </center>
        
        <script>
            var accl = [{{accl}}]
            var gyro = [{{gyro}}]
            var temperature = [{{temp}}]
            var time = "{{time}}"
            time = time.split(",")
            var acclData = {
                labels: time,
                datasets: [{
                    label: "Acceleration",
                
                    borderColor: 'rgb(0,0,0)',
                    data: accl,
             }]}
             var gyroData = {
                labels: time,
                datasets: [{
                    label: "Gyroscope",
                
                    borderColor: 'rgb(0,0,0)',
                    data: gyro,
             }]}
             var tempdata = {
                labels: time,
                datasets: [{
                    label: "Temperature",
                    
                    borderColor: 'rgb(0,0,0)',
                    data: temperature,
             }]}
            var actx = document.getElementById("acclCanvas");
            var gctx = document.getElementById("gyroCanvas");
            var tctx = document.getElementById("tempCanvas");
            var acclChart = new Chart(actx, {
                labels: time,
                type:'line',
                data:acclData,
                options: {responsive: false}
            });
            var gyroChart = new Chart(gctx, {
                labels: time,
                type:'line',
                data:gyroData,
                options: {responsive: false}
            });

            var tempChart = new Chart(tctx, {
                labels: time,
                type:'line',
                data:tempdata,
                options: {responsive: false}
            });
        </script>
    </body>
</html>