<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" type="text/css" href="tempStyles.css">
    </head>
    <body id="body">
        <script>
            var dom = document.getElementById('body');
            function getCssValuePrefix()
            {
                var rtrnVal = '';
                var prefixes = ['-o-', '-ms-', '-moz-', '-webkit-'];                      

                for (var i = 0; i < prefixes.length; i++)
                {
                    // Attempt to set the style
                    dom.style.background = prefixes[i] + 'linear-gradient(to right, #000000, #ffffff)';

                    // Detect if the style was successfully set
                    if (dom.style.background)
                    {
                        rtrnVal = prefixes[i];
                    }
                }

                dom = null;
                delete dom;

                return rtrnVal;
            }
            dom.style.backgroundImage = getCssValuePrefix() + 'linear-gradient(to right,'+"{{color1}}"+', {{color2}})';
        </script>
